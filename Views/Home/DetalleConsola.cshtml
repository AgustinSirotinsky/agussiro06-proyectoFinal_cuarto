@{
    ViewData["Title"] = "DetalleConsola";
}
<div class="text-center">
    <h1>@ViewBag.DetalleConsola.Nombre</h1>
    <img src="/FotoConsola/@ViewBag.DetalleConsola.Portada" alt="@ViewBag.DetalleConsola.Nombre" width="340" height="340"></br>
    <h3>@ViewBag.DetalleConsola.FechaSalida.ToShortDateString()</h3>
    <h3>@ViewBag.DetalleConsola.Empresa</h3>
</div>


<div class="row">
    @{
        foreach (Juego objJuego in ViewBag.Juegos){
            <div class="col-md-2 col-6">
                <div class="card" >
                    <img class="card-img-top" src="/FotoJuego/@objJuego.Portada" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@objJuego.Nombre</h5>
                        <div class="text-center">
                            <a href ='@Url.Action("DetalleJuego","Home",new {IdJuego=objJuego.IdJuego})'><img src="/Botones/VERINFO.png" class="w-100"></a>
                            <a href data-toggle="modal" data-target="#Modal" onclick="MostrarInformacionJuego(@objJuego.IdJuego)"><img src="/Botones/VERMODAL.png" class="w-100"></a>
                          </div>
                    </div>
                </div>
            </div>
        }
    }   
</div>
</br>
<div class="text-center">
    <a href ='@Url.Action("BorrarConsola","Home",new {IdConsola=@ViewBag.DetalleConsola.idConsola})'><img src="/botones/BORRARCONSOLA.png"></a>
</div>
@* Modal *@
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="Titulo-Modal">Modal Title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="Informacion"></div>
        <br>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>