@{
    ViewData["Title"] = "Usuario";
}
<div class="row">
    <div class="col-md-4">
        <h1>Juego Favorito:</h1>
        <div class="card">
            <img class="card-img-top" src="/FotoJuego/@ViewBag.JuegoFavorito.Portada" alt="Card image cap">
            <div class="card-body">
                    <h5 class="card-title">@ViewBag.JuegoFavorito.Nombre</h5>
                <div class="text-center">
                    <a href ='@Url.Action("DetalleJuego","Home",new {IdJuego=@ViewBag.JuegoFavorito.IdJuego})'><img src="/Botones/VERINFO.png" class="w-100"></a>
                    <a href data-toggle="modal" data-target="#Modal" onclick="MostrarInformacionJuego(@ViewBag.JuegoFavorito.IdJuego)"><img src="/Botones/VERMODAL.png" class="w-100"></a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="text-center">
            <h1>@ViewBag.Usuario.Nombre</h1>
            <img src="/FotoUsuario.png">
            <h3>Informacion: @ViewBag.Usuario.Informacion</h3>
            <h5>Fecha de creacion: @ViewBag.Usuario.FechaCreacion.ToShortDateString()</h5>
        </div>
    </div>
</div>


@* Modal *@
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="Titulo-Modal">Modal Title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="Informacion"></div>
        <br>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>